// Este é o seu arquivo de esquema Prisma, você pode aprender mais sobre ele aqui:
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Para voltar a usar um banco de dados PostgreSQL (como o NeonDB) no futuro,
  // basta seguir estes dois passos:
  // 1. Mude o `provider` abaixo de "sqlite" para "postgresql".
  // 2. Garanta que a sua variável de ambiente DATABASE_URL no arquivo .env 
  //    contenha a URL de conexão correta do seu banco PostgreSQL.
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ==================================
//          MODELOS DE DADOS
// ==================================

// Modelo para Usuários
model User {
  id                 String   @id @default(cuid())
  name               String
  email              String   @unique
  avatarUrl          String?
  subscriptionStatus String   @default("active") // active, inactive, trial
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  ownedVaults       Vault[]          @relation("VaultOwner")
  vaultMemberships  VaultMember[]
  ownedAccounts     Account[]
  goals             Goal[]
  transactions      Transaction[]
  sentInvitations   Invitation[]     @relation("Sender")
  receivedInvitations Invitation[]   @relation("Receiver")
  notifications     Notification[]
}

// Modelo para Cofres (Workspaces Compartilhados)
model Vault {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String?
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User          @relation("VaultOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members VaultMember[]
  accounts Account[]
  goals   Goal[]
  transactions Transaction[]
  
  @@index([ownerId])
}

// Tabela de junção para membros dos cofres
model VaultMember {
  id      String @id @default(cuid())
  vaultId String
  userId  String
  role    String @default("member") // owner, member

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([vaultId, userId])
  @@index([vaultId])
  @@index([userId])
}

// Modelo para Contas Bancárias e Cartões
model Account {
  id              String   @id @default(cuid())
  name            String
  bank            String
  type            String // checking, savings, investment, credit_card, other
  balance         Float
  creditLimit     Float?
  logoUrl         String?
  ownerId         String
  scope           String   // 'personal' ou um vaultId
  vaultId         String?  // Nulo se for pessoal, preenchido se for de um cofre
  visibleIn       String   @default("") // IDs de cofres separados por vírgula
  allowFullAccess Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  owner                 User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  vault                 Vault?       @relation(fields: [vaultId], references: [id], onDelete: SetNull)
  sourceTransactions    Transaction[] @relation("TransactionSource")
  destinationTransactions Transaction[] @relation("TransactionDestination")

  @@index([ownerId])
  @@index([vaultId])
}

// Modelo para Metas (Caixinhas)
model Goal {
  id            String   @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float    @default(0)
  emoji         String
  visibility    String   @default("shared") // private, shared
  isFeatured    Boolean  @default(false)
  ownerId       String
  ownerType     String // 'user' ou 'vault'
  userId        String?
  vaultId       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user         User?             @relation(fields: [userId], references: [id], onDelete: SetNull)
  vault        Vault?            @relation(fields: [vaultId], references: [id], onDelete: SetNull)
  participants GoalParticipant[]
  transactions Transaction[]
  
  @@index([ownerId])
  @@index([userId])
  @@index([vaultId])
}

// Modelo para Participantes de Metas
model GoalParticipant {
  id        String @id @default(cuid())
  goalId    String
  userId    String
  role      String @default("member")
  contributionContextId String?

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([goalId, userId])
  @@index([goalId])
  @@index([userId])
}

// Modelo para Transações Financeiras
model Transaction {
  id                 String   @id @default(cuid())
  ownerId            String
  ownerType          String // 'user' ou 'vault'
  date               DateTime
  description        String
  amount             Float
  type               String // income, expense, transfer
  category           String
  paymentMethod      String?
  sourceAccountId    String?
  destinationAccountId String?
  goalId             String?
  actorId            String
  isRecurring        Boolean  @default(false)
  isInstallment      Boolean  @default(false)
  installmentNumber  Int?
  totalInstallments  Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user   User?   @relation(fields: [ownerId], references: [id], onDelete: Cascade, map: "TransactionToUser")
  vault  Vault?  @relation(fields: [ownerId], references: [id], onDelete: Cascade, map: "TransactionToVault")
  sourceAccount      Account? @relation("TransactionSource", fields: [sourceAccountId], references: [id], onDelete: SetNull)
  destinationAccount Account? @relation("TransactionDestination", fields: [destinationAccountId], references: [id], onDelete: SetNull)
  goal               Goal?    @relation(fields: [goalId], references: [id], onDelete: SetNull)
  actor              User     @relation(fields: [actorId], references: [id], onDelete: Cascade, map: "UserActions")

  @@index([ownerId])
  @@index([sourceAccountId])
  @@index([destinationAccountId])
  @@index([goalId])
  @@index([actorId])
}

// Modelo para Convites
model Invitation {
  id         String   @id @default(cuid())
  type       String // 'vault' ou 'goal'
  targetId   String
  targetName String
  senderId   String
  receiverId String
  status     String   @default("pending") // pending, accepted, declined
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  sender   User @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
}

// Modelo para Notificações
model Notification {
  id           String   @id @default(cuid())
  userId       String
  type         String
  text         String
  actorId      String?
  actorName    String?
  actorAvatar  String?
  link         String?
  read         Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Modelo para Relatórios Salvos (se necessário no futuro)
model SavedReport {
  id           String   @id @default(cuid())
  ownerId      String
  ownerType    String
  month        Int
  year         Int
  reportData   Json
  createdAt    DateTime @default(now())

  @@unique([ownerId, month, year])
  @@index([ownerId])
}
