// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================================
// MODELOS DE AUTENTICAÇÃO E USUÁRIOS
// ======================================
model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  name               String
  password           String
  avatarUrl          String?
  subscriptionStatus String    @default("trial")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  
  ownedVaults   Vault[]         @relation("VaultOwner")
  vaults        VaultMember[]
  accounts      Account[]
  goals         Goal[]
  transactions  Transaction[]
  invitationsSent Invitation[] @relation("SentInvitations")
  invitationsReceived Invitation[] @relation("ReceivedInvitations")
  notifications Notification[]
  actedTransactions Transaction[] @relation("TransactionActor")
  categories    Category[]
}

// ======================================
// MODELO DE COFRES COMPARTILHADOS
// ======================================
model Vault {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String?
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User     @relation("VaultOwner", fields: [ownerId], references: [id])
  members VaultMember[]
  accounts Account[]
  goals   Goal[]
  transactions Transaction[]
  invitations Invitation[]
}

model VaultMember {
  id        String   @id @default(cuid())
  userId    String
  vaultId   String
  role      String   @default("member") // owner, admin, member
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  vault Vault @relation(fields: [vaultId], references: [id])

  @@unique([userId, vaultId])
}


// ======================================
// MODELO DE CONTAS BANCÁRIAS E CARTÕES
// ======================================
model Account {
  id          String   @id @default(cuid())
  name        String
  bank        String
  type        String // checking, savings, investment, credit_card, other
  balance     Float
  creditLimit Float?
  logoUrl     String?
  scope       String   // "personal" ou um vaultId
  ownerId     String   // Sempre o ID do usuário dono da conta
  visibleIn   String[] @default([]) // Array de vaultIds onde a conta pessoal é visível
  
  owner User @relation(fields: [ownerId], references: [id])
  
  vaultId String?
  vault   Vault?  @relation(fields: [vaultId], references: [id])
  
  transactionsAsSource      Transaction[] @relation("SourceAccount")
  transactionsAsDestination Transaction[] @relation("DestinationAccount")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ======================================
// MODELO DE METAS (CAIXINHAS)
// ======================================
model Goal {
  id            String   @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float    @default(0.0)
  emoji         String
  visibility    String   @default("private") // private, shared
  isFeatured    Boolean  @default(false)
  
  // Relacionamento com dono (ou usuário ou cofre)
  userId        String?
  vaultId       String?
  user          User?    @relation(fields: [userId], references: [id])
  vault         Vault?   @relation(fields: [vaultId], references: [id])

  participants  GoalParticipant[]
  transactions  Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GoalParticipant {
  id        String   @id @default(cuid())
  userId    String
  goalId    String
  role      String   @default("member") // owner, member

  user User @relation(fields: [userId], references: [id])
  goal Goal @relation(fields: [goalId], references: [id])

  @@unique([userId, goalId])
}

// ======================================
// MODELO DE TRANSAÇÕES
// ======================================
model Transaction {
  id                 String   @id @default(cuid())
  date               DateTime
  description        String
  amount             Float
  type               String // income, expense, transfer
  category           String
  paymentMethod      String?
  sourceAccountId    String?
  destinationAccountId String?
  goalId             String?
  actorId            String
  isRecurring        Boolean  @default(false)
  isInstallment      Boolean  @default(false)
  installmentNumber  Int?
  totalInstallments  Int?
  
  userId             String?
  vaultId            String?

  user          User?    @relation(fields: [userId], references: [id])
  vault         Vault?   @relation(fields: [vaultId], references: [id])
  sourceAccount Account? @relation("SourceAccount", fields: [sourceAccountId], references: [id])
  destinationAccount Account? @relation("DestinationAccount", fields: [destinationAccountId], references: [id])
  goal          Goal?    @relation(fields: [goalId], references: [id])
  actor         User     @relation("TransactionActor", fields: [actorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


// ======================================
// MODELO DE NOTIFICAÇÕES E CONVITES
// ======================================
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  text      String
  link      String?
  read      Boolean  @default(false)
  
  actorId     String?
  actorName   String?
  actorAvatar String?

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invitation {
  id         String   @id @default(cuid())
  type       String   // vault, goal
  targetId   String
  targetName String
  senderId   String
  receiverId String
  status     String   @default("pending") // pending, accepted, declined

  sender   User @relation("SentInvitations", fields: [senderId], references: [id])
  receiver User @relation("ReceivedInvitations", fields: [receiverId], references: [id])
  vault    Vault? @relation(fields: [targetId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([receiverId, targetId, type])
}


// ======================================
// MODELO DE RELATÓRIOS SALVOS
// ======================================
model SavedReport {
  id           String   @id @default(cuid())
  ownerId      String   // Pode ser um userId ou um vaultId
  monthYear    String   // Ex: "Novembro de 2024"
  analysisHtml String
  createdAt    DateTime @default(now())

  @@unique([ownerId, monthYear])
}


// ======================================
// MODELO DE CATEGORIAS
// ======================================
model Category {
  id      String @id @default(cuid())
  name    String
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
