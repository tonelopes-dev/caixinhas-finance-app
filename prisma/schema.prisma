generator client {
  provider = "prisma-client-js"
}

datasource db {
  // --- Configuração para SQLite (Desenvolvimento Local) ---
   provider = "sqlite"
   url      = "file:./dev.db"

  // --- Configuração para PostgreSQL (Produção / NeonDB) ---
//  provider  = "postgresql"
 // url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}


// ============================================
// MODELOS DE DADOS
// ============================================

model User {
  id                 String          @id @default(cuid())
  name               String
  email              String          @unique
  avatarUrl          String?
  subscriptionStatus String          @default("trial") // active, inactive, trial
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  
  ownedVaults        Vault[]         @relation("OwnerToVault")
  memberships        VaultMember[]
  accounts           Account[]
  
  // Relações para Transações
  transactionsOwned  Transaction[]   @relation("UserTransactions")
  actionsMade        Transaction[]   @relation("UserActions")

  // Relações para Notificações e Convites
  notifications      Notification[]
  sentInvitations    Invitation[]    @relation("Sender")
  receivedInvitations Invitation[]   @relation("Receiver")
  
  goalsOwned         Goal[]
  goalParticipations GoalParticipant[]
}

model Vault {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String?
  ownerId   String
  owner     User     @relation("OwnerToVault", fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  members      VaultMember[]
  accounts     Account[]
  transactions Transaction[] @relation("TransactionToVault")
  goals        Goal[]
}

model VaultMember {
  id        String   @id @default(cuid())
  userId    String
  vaultId   String
  role      String   @default("member") // owner, admin, member
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@unique([userId, vaultId])
}

model Account {
  id        String   @id @default(cuid())
  name      String
  bank      String
  type      String   // checking, savings, investment, credit_card, other
  balance   Float
  logoUrl   String?
  
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  
  // --- Campos de relacionamento e escopo ---
  scope     String // 'personal' ou um vaultId.
  vaultId   String?
  vault     Vault?   @relation(fields: [vaultId], references: [id], onDelete: SetNull)

  // Para contas pessoais visíveis em cofres
  visibleIn       String? // Armazena IDs de cofres separados por vírgula
  allowFullAccess Boolean @default(false)

  // --- Campos específicos de cartão de crédito ---
  creditLimit Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactionsFrom Transaction[] @relation("TransactionSource")
  transactionsTo   Transaction[] @relation("TransactionDestination")
}

model Goal {
  id            String   @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float    @default(0)
  emoji         String
  visibility    String   @default("shared") // private, shared
  isFeatured    Boolean  @default(false)

  ownerId       String // ID do User ou Vault
  ownerType     String // 'user' ou 'vault'
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  vaultId       String?
  vault         Vault?   @relation(fields: [vaultId], references: [id], onDelete: SetNull)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  participants  GoalParticipant[]
  transactions  Transaction[]
}

model GoalParticipant {
  id          String   @id @default(cuid())
  userId      String
  goalId      String
  role        String   @default("member") // owner, member
  contributionContextId String? // ID do User ou Vault de onde virão as contribuições

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@unique([userId, goalId])
}

model Transaction {
  id          String   @id @default(cuid())
  date        DateTime
  description String
  amount      Float
  type        String // income, expense, transfer
  category    String
  paymentMethod String? // pix, credit_card, debit_card, etc.

  // Campos de Recorrência e Parcelamento
  isRecurring       Boolean @default(false)
  isInstallment     Boolean @default(false)
  installmentNumber Int?
  totalInstallments Int?

  // --- Relacionamentos e propriedade ---
  ownerId   String // ID do User ou Vault
  ownerType String // 'user' ou 'vault'
  userId    String?
  user      User?    @relation("UserTransactions", fields: [userId], references: [id], onDelete: SetNull)
  vaultId   String?
  vault     Vault?   @relation("TransactionToVault", fields: [vaultId], references: [id], onDelete: SetNull)

  sourceAccountId String?
  sourceAccount   Account? @relation("TransactionSource", fields: [sourceAccountId], references: [id], onDelete: SetNull)
  
  destinationAccountId String?
  destinationAccount   Account? @relation("TransactionDestination", fields: [destinationAccountId], references: [id], onDelete: SetNull)

  goalId String?
  goal   Goal?   @relation(fields: [goalId], references: [id], onDelete: SetNull)

  // Quem realizou a ação
  actorId String
  actor   User   @relation("UserActions", fields: [actorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Notification {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String
  text        String
  actorId     String?
  actorName   String?
  actorAvatar String?
  relatedId   String?
  link        String?
  read        Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model Invitation {
  id         String   @id @default(cuid())
  type       String   // 'vault' ou 'goal'
  targetId   String   // ID do Vault ou Goal
  targetName String
  senderId   String
  sender     User     @relation("Sender", fields: [senderId], references: [id])
  receiverId String
  receiver   User     @relation("Receiver", fields: [receiverId], references: [id])
  status     String   @default("pending") // pending, accepted, declined
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([receiverId, targetId])
}

// Modelo para relatórios de IA salvos (exemplo, não usado ativamente no código atual)
model SavedReport {
  id           String   @id @default(cuid())
  ownerId      String
  monthYear    String
  analysisHtml String
  createdAt    DateTime @default(now())

  @@unique([ownerId, monthYear])
}
