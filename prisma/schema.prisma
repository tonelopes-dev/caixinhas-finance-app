generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  name               String
  password           String
  avatarUrl          String?
  subscriptionStatus String   @default("trial")
  trialExpiresAt     DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  ownedVaults             Vault[]             @relation("OwnerOfVault")
  vaultMemberships        VaultMember[]
  ownedAccounts           Account[]           @relation("OwnerOfAccount")
  transactionsAsActor     Transaction[]       @relation("ActorOfTransaction")
  ownedTransactions       Transaction[]       @relation("OwnerOfTransaction")
  ownedGoals              Goal[]              @relation("OwnerOfGoal")
  goalParticipations      GoalParticipant[]
  sentInvitations         Invitation[]        @relation("SenderOfInvitation")
  receivedInvitations     Invitation[]        @relation("ReceiverOfInvitation")
  notifications           Notification[]
  savedReports            SavedReport[]
  ownedCategories         Category[]
}

model Vault {
  id        String   @id @default(cuid())
  name      String
  imageUrl  String?
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner         User            @relation("OwnerOfVault", fields: [ownerId], references: [id], onDelete: Cascade)
  members       VaultMember[]
  accounts      Account[]
  transactions  Transaction[]
  goals         Goal[]
  invitations   Invitation[]
}

model VaultMember {
  id        String   @id @default(cuid())
  vaultId   String
  userId    String
  role      String   @default("member")
  createdAt DateTime @default(now())

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([vaultId, userId])
}

model Account {
  id          String   @id @default(cuid())
  name        String
  bank        String
  type        String
  balance     Float
  creditLimit Float?
  logoUrl     String?
  scope       String
  visibleIn   String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ownerId             String
  owner               User                @relation("OwnerOfAccount", fields: [ownerId], references: [id], onDelete: Cascade)
  vaultId             String?
  vault               Vault?              @relation(fields: [vaultId], references: [id], onDelete: SetNull)
  sourceTransactions  Transaction[]       @relation("SourceOfTransaction")
  destTransactions    Transaction[]       @relation("DestinationOfTransaction")
}

model Goal {
  id            String   @id @default(cuid())
  name          String
  targetAmount  Float
  currentAmount Float    @default(0)
  emoji         String
  visibility    String   @default("shared")
  isFeatured    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId          String?
  user            User?               @relation("OwnerOfGoal", fields: [userId], references: [id], onDelete: Cascade)
  vaultId         String?
  vault           Vault?              @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  transactions    Transaction[]
  participants    GoalParticipant[]
}

model GoalParticipant {
  id      String @id @default(cuid())
  goalId  String
  userId  String
  role    String @default("member")

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([goalId, userId])
}

model Transaction {
  id                 String   @id @default(cuid())
  date               DateTime
  description        String
  amount             Float
  type               String // income, expense, transfer
  paymentMethod      String?
  isRecurring        Boolean  @default(false)
  isInstallment      Boolean  @default(false)
  installmentNumber  Int?
  totalInstallments  Int?
  paidInstallments   Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  actorId                 String
  actor                   User                @relation("ActorOfTransaction", fields: [actorId], references: [id])
  userId                  String?
  user                    User?               @relation("OwnerOfTransaction", fields: [userId], references: [id], onDelete: Cascade)
  vaultId                 String?
  vault                   Vault?              @relation(fields: [vaultId], references: [id], onDelete: Cascade)
  sourceAccountId         String?
  sourceAccount           Account?            @relation("SourceOfTransaction", fields: [sourceAccountId], references: [id], onDelete: SetNull)
  destinationAccountId    String?
  destinationAccount      Account?            @relation("DestinationOfTransaction", fields: [destinationAccountId], references: [id], onDelete: SetNull)
  goalId                  String?
  goal                    Goal?               @relation(fields: [goalId], references: [id], onDelete: SetNull)
  categoryId              String
  category                Category            @relation(fields: [categoryId], references: [id])
}

model Category {
  id             String        @id @default(cuid())
  name           String
  ownerId        String
  transactions   Transaction[]
  
  owner          User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([name, ownerId])
}

model Invitation {
  id         String   @id @default(cuid())
  type       String // vault, goal
  targetId   String
  targetName String
  senderId   String
  receiverId String
  status     String   @default("pending") // pending, accepted, declined
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  vault    Vault? @relation(fields: [targetId], references: [id], onDelete: Cascade)
  sender   User   @relation("SenderOfInvitation", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User   @relation("ReceiverOfInvitation", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedReport {
  id           String   @id @default(cuid())
  ownerId      String
  monthYear    String
  analysisHtml String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([ownerId, monthYear])
}
